{
    "manifest_version": 2,
    "name": "Store Browser Info",
    "version": "1.0",
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": [
            "src/bundle.js",
            "src/client.js"
          ]
        }
      ],
    "description": "Trying to store information",

    "background": {
      "page": "index.html",
      "scripts": ["background.js", "src/client.js", "src/bundle.js"]
    },

    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

    "permissions": [
        "webNavigation",
        "webRequest",
        "webRequestBlocking",
        "<all_urls>",
        "storage",
        "unlimitedStorage"
    ]
}