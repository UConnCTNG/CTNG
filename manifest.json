{
    "manifest_version": 3,
    "name": "CTng",
    "version": "1.0",
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": [
            "src/bundle.js",
            "src/client.js",
            "test/test.js"
          ]
        }
      ],
    "description": "The CTng browser extension.",

    "background": {
      "page": "index.html",
      "scripts": ["src/client.js", "src/bundle.js", "test/test.js"]
    },
    "action": {
      "default_popup": "index.html",
      "default_icon": {
        "48": "images/icon.png"
      }
    },
    "icons": {
      "48": "images/icon.png"
    },

    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

    "permissions": [
        "webNavigation",
        "webRequest",
        "webRequestBlocking",
        "<all_urls>",
        "storage",
        "unlimitedStorage"
    ]
}